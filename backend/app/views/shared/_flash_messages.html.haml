- flash.each do |name, msg|
  %h6{ class: "alert alert-#{ case name when 'notice' then :info when 'alert', 'recaptcha_error' then :danger when 'error' then :danger end } alert-dismissable" }
    %button{ type: :button, class: :close, 'data-dismiss': :alert, 'aria-hidden': true } &times;
    = msg.html_safe
